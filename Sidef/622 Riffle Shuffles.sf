func rshuffle_cycle_len (n) {
    lcm(2, znorder(2, n - 1))
}

func S(n) {
    (2**n - 1).divisors.sum_by {|d|
        rshuffle_cycle_len(d+1) == n ? d+1 : 0
    }
}

say S(60)
