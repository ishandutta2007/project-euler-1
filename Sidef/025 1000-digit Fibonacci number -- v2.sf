# Runtime: 0.302s

func fib_len(n, base=10) {

    static S = (sqrt(1.25) + 0.5)
    static T = (1 - S)
    static W = (S - T)

    1 + ilog((S**n - T**n) / W, base)
}

say (^Inf -> first_by {|n| fib_len(n) == 1000 })
