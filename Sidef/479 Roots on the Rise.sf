# https://projecteuler.net/problem=479

# Runtime: 36.014s

var n = 1e6
var m = 1000000007

say sum(1..n, {|k|
    var p = (k*k - 1)
    (p * ((-1)**n * powmod(p, n, m) - 1) * invmod(p+1, m)) % m
})%m
